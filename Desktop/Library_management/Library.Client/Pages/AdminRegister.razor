@page "/admin-register"
@using LMS.CLient.Services;
@using LMS.Library.DTOs;
@inject AdminAuthService adminAuthService
@inject NavigationManager Nav

<EditForm Model="@register" OnValidSubmit="HandleRegister">
    <DataAnnotationsValidator />

    <div class="login-card1">
        <h4 class="text-center mb-3">Register</h4>

        <div class="mb-3">
            <label>Name</label>
            <InputText class="form-control" @bind-Value="register.Name" />
        </div>

        <div class="mb-3">
            <label>Email</label>
            <InputText class="form-control" @bind-Value="register.Email" />
        </div>

        <div class="mb-3">
            <label>Password</label>
            <InputText type="password"
                       class="form-control"
                       @bind-Value="register.Password" />
        </div>

        <button class="btn btn-primary w-100" type="submit">
            Register
        </button>

        <p class="text-danger mt-2">@message</p>
    </div>
</EditForm>

@code {
    RegisterDto register = new();
    string message;

    async Task HandleRegister()
    {
        var success = await adminAuthService.RegisterAsync(register);

        if (success)
        {
            Nav.NavigateTo("/admin-login");
        }
        else
        {
            message = "User already exists.";
        }
    }
}
